load("@io_bazel_rules_go//go:def.bzl", "go_binary")

go_binary(
    name = "packager",
    srcs = ["packager.go"],
    visibility = ["//visibility:public"],
    deps = ["@go_yaml_yaml"],
)

filegroup(
    name = "bzl_srcs",
    srcs = glob(
        ["**/*.bzl"],
        allow_empty = True,
    ),
    visibility = ["//:__subpackages__"],
)
